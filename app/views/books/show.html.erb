<div class="container">
  <section class="mb-4">
    <div class="page-heading mb-4">
      <h1 class="page-heading__title">
        <%= @user.name %>の通信簿をつけよう！
      </h1>
    </div>
    <div class="review-form sp-full-width">
      <div class="review-form__container--good">
        <p class="review-form__label">
          <i class="far fa-smile-beam fa-lg mr-2"></i>よくできました
        </p>
        <%= form_for [@book, @review] do |f| %>
          <div class="form-row">
            <div class="form-group col-md-11 col-10 pl-3">
              <%= f.text_field :content, type: "text", class: "form-control", placeholder: "おしゃれなカフェいっぱい知ってる！" %>
              <%= f.hidden_field :review_type, value: "good" %>
            </div>
            <div class="form-group review-send col-md-1 col-2">
              <%= button_tag type: "submit", class: "review-send__button btn btn-sm btn-link text-info" do %>
                <i class="material-icons align-middle md-30">send</i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="review-form sp-full-width">
      <div class="review-form__container--bad">
        <p class="review-form__label">
          <i class="far fa-sad-cry fa-lg mr-2"></i>ココがいまひとつ！
        </p>
        <%= form_for [@book, @review] do |f| %>
          <div class="form-row">
            <div class="form-group col-md-11 col-10 pl-3 mb-1">
              <%= f.text_field :content, type: "text", class: "form-control", placeholder: "すぐ遅刻する！モニコしようか？" %>
              <%= f.hidden_field :review_type, value: "bad" %>
            </div>
            <div class="form-group review-send col-md-1 col-2 mb-1">
              <%= button_tag type: "submit", class: "review-send__button btn btn-sm btn-link text-info" do %>
                <i class="material-icons align-middle md-30">send</i>
              <% end %>
            </div>
          </div>
        <% end %>
        <div class="review-form__note">
          <small>
            親御さんに見られて怒られちゃうとかわいそうなので、お手柔らかに...！
          </small>
        </div>
      </div>
    </div>
  </section>
  <section class="page-section mb-4">
    <p class="page-section__title sp-full-width mb-4">
      <%= @user.name %>さんの通信簿
    </p>
    <div class="text-center">
      <%= render partial: "shared/book-card", locals: { user: @user, book: @book, reviews: @reviews } %>
      <% if !user_signed_in? %>
        <p class="mb-2">ログインして、自分の通信簿を作ってみよう！</p>
        <%= link_to "自分の通信簿を作る！", "#", class: "btn btn-info btn-round shadow-sm" %>
      <% end %>
    </div>
  </section>
  <section class="page-section mb-4">
    <p class="page-section__title sp-full-width mb-4">
      友達の通信簿
    </p>
    <%# TODO 通信簿を動的にする %>
    <div class="row mb-3">
      <%= link_to "#" do %>
        <%= image_tag "book_sample.jpg", width: "100%", class: "col-md-6 offset-md-3"%>
      <% end %>
      <hr>
      <%= link_to "#" do %>
        <%= image_tag "book_sample.jpg", width: "100%", class: "col-md-6 offset-md-3"%>
      <% end %>
    </div>
    <div class="text-center">
      <%= link_to "友達の通信簿を覗く", "#", class: "btn btn-secondary btn-round" %>
    </div>
  </section>
</div>
