<div class="card card__container--blackbord col-md-6 offset-md-3 col-12" data-background="color" data-radius="none">
  <div class="card-body">
    <div class="author pull-left">
      <%= image_tag user.image, class: "avatar img-raised align-middle" %>
      <span class="align-middle font-weight-bold">
        <%= user.name %>の通信簿
      </span>
    </div>
    <span class="pull-right">
      <%= link_to "#", class: "card__twitter-share-btn btn btn-twitter btn-round btn-sm disabled" do %>
        <i class="fab fa-twitter mr-1" aria-hidden="true"></i>シェア！
      <% end %>
    </span>
    <div class="clearfix"></div>
    <p class="card-description">
      <% reviews.each do |review| %>
        <span>
          <%= "#{review.type_symbol}#{review.content}" %><br>
        </span>
      <% end %>
    </p>
    <% if user_signed_in? && book.user_id == current_user.id %>
      <%= link_to "編集", edit_book_path(book), class: "btn btn-sm btn-outline-warning btn-round mt-2" %>
    <% end %>
  </div>
</div>
