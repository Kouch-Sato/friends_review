<div class="bottom-navbar">
  <nav class="navbar fixed-bottom navbar-light border-top pt-2 pb-3">
    <div class="container">
      <% if user_signed_in? %>
        <div class="col-4 text-center">
          <%= active_link_to user_path(current_user), class: "bottom-navbar__link" do %>
            <i class="fas fa-home fa-lg"></i><br>
            <small>
              ホーム
            </small>
          <% end %>
        </div>
        <div class="col-4 text-center">
          <%= active_link_to check_book_path(current_user.book), class: "bottom-navbar__link" do %>
            <i class="fas fa-box-open fa-lg"></i><br>
            <small>
              新着の評定
            </small>
            <span class="bottom-navbar__notification">
              <%= current_user.reviews.unchecked.count %>
            </span>
          <% end %>
        </div>
        <div class="col-4 text-center">
          <%= active_link_to "#", class: "bottom-navbar__link" do %>
            <i class="fas fa-users fa-lg"></i><br>
            <small>
              友達の通信簿
            </small>
          <% end %>
        </div>
      <% else %>
        <div class="col-4 text-center">
          <%= link_to root_path, class: "bottom-navbar__link" do %>
            <i class="fas fa-home fa-lg"></i><br>
            <small>
              ホーム
            </small>
          <% end %>
        </div>
        <div class="col-4 text-center">
          <button class="bottom-navbar__link btn-neutral" data-toggle="modal" data-target="#loginModal">
            <i class="fas fa-box-open fa-lg"></i><br>
            <small>
              新着の評定
            </small>
          </button>
        </div>
        <div class="col-4 text-center">
          <button class="bottom-navbar__link btn-neutral" data-toggle="modal" data-target="#loginModal">
            <i class="fas fa-users fa-lg"></i><br>
            <small>
              友達の通信簿
            </small>
          </button>
        </div>
      <% end %>
    </div>
  </nav>
</div>

<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title modal__title" id="loginModalLabel"
          >登録 / ログインしましょう！
        </h2>
      </div>
      <div class="modal-body text-center">
        <%= link_to "TOPページへ", root_path, class: "btn btn-info btn-block"  %>
        <button type="button" class="btn btn-default btn-link mt-3" data-dismiss="modal">
          閉じる
        </button>
      </div>
    </div>
  </div>
</div>
