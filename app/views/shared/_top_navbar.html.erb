<header class="top-navbar">
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <div class="col-md-4 col-2">
        <% if user_signed_in? %>
          <%= image_tag current_user.image, class: "top-navbar__avatar" %>
        <% end %>
      </div>
      <div class="col-md-4 col-8 text-center">
        <%= image_tag "service_title.png", class: "top-navbar__service-image" %>
      </div>
      <div class="col-md-4 col-2 text-right">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse float-right" id="navbarNav">
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item navbar-toggler">
                <%= link_to "新着の評定", check_book_path(current_user.book), class: "nav-link pl-0" %>
              </li>
              <li class="nav-item navbar-toggler">
                <%= link_to "友達の通信簿", "#", class: "nav-link pl-0" %>
              </li>
              <li class="nav-item navbar-toggler">
                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-link pl-0" %>
              </li>
            <% else %>
              <li class="nav-item navbar-toggler">
                <%= link_to "Twitterでログイン", omniauth_authorize_path(:user, :twitter), class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>
